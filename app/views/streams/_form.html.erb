<%= form_with model: @stream, local: true do |form| %>
 
  <% if @stream.errors.any? %>
  <div class="form-group">
    <div id="error_explanation" class="alert alert-warning alert-dismissible">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
      <h4>
        <i class="icon fa fa-warning"></i>Alert!
        <%= pluralize(@stream.errors.count, "error") %> prohibited
        this stream from being saved:
      </h4>
      <ul>
        <% @stream.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
  <% end %>
<div class="box-body">
  <div class="form-group">
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>
 
  <div class="form-group">
    <%= form.label :rtsp %><br>
    <%= form.text_area :rtsp %>
  </div>
 
  <div class="box-footer">

    <%= link_to 'Back', streams_path, :class=>'button btn btn-default' %>
    <%= form.submit :submit, :class=>'button pull-right btn btn-default' %>
  </div>
</div>
 
<% end %>